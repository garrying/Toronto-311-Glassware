<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:keepScreenOn="true"
    android:orientation="vertical" >

    <TextView
        android:id="@id/contactView_action"
        style="@style/TitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/phone_3"
        android:text="@string/contactTitle" />

    <TextView
        android:id="@id/contactView_callToAction"
        style="@style/H3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contactCallToAction" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:orientation="vertical" >

        <TextView
            android:id="@id/contactView_email"
            style="@style/H3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/email_3"
            android:drawablePadding="10px"
            android:gravity="center"
            android:text="@string/contactEmail" />

        <TextView
            android:id="@id/contactView_twitter"
            style="@style/H3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/twitter_3"
            android:drawablePadding="10px"
            android:gravity="center"
            android:text="@string/contactTwitter" />
    </LinearLayout>

</LinearLayout>